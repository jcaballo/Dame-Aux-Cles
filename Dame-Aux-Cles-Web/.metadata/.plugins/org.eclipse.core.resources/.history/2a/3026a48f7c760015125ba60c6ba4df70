package com.dameauxcles.dao;

import javax.persistence.EntityManager;
import javax.persistence.NoResultException;
import javax.persistence.PersistenceContext;
import javax.persistence.Query;

import org.springframework.stereotype.Repository;

import com.dameauxcles.model.Person;


public class PersonDAO {

	private static final String JPQL_SELECT = "SELECT * FROM PERSONNES";

	// Injection du manager, qui s'occupe de la connexion avec la BDD
	@PersistenceContext(unitName = "bdd_model_Person_PU")
	private EntityManager em;

	// Recherche d'un utilisateur
	public Person trouver() {
		Person utilisateur = null;
		Query requete = em.createQuery(JPQL_SELECT);
		try {
			utilisateur = (Person) requete.getSingleResult();
		} catch (NoResultException e) {
			return null;
		}
		
		return utilisateur;

	}
}
